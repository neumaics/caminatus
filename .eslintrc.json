{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": "error",
        "no-alert": "error",
        "semi": ["error", "always"],
        "jsx-quotes": ["error", "prefer-single"],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "indent": ["error", 2]
    }
}